@model PruebaItehl_DeyvidMartinez.Models.Ciudad
@Styles.Render("~/Content/Bootstrap.css")
@Styles.Render("~/Content/EstilosIndex.css")
@Styles.Render("~/Content/estilos.css")
@Styles.Render("~/Content/Site.css")
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
<title>Crear Ciudad</title>
</head>
<body class="fondotabla">
    <div class="row" style="width:100%">
        <div class="col-sm-12">
            <div class="titulo-crear">
                <h1>Crear Ciudad</h1>
            </div>
            <hr />
            <div class="texto-contenido">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="container">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-sm-12">
                                @Html.LabelFor(model => model.Ciud_Nom, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div>
                                    @Html.EditorFor(model => model.Ciud_Nom, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ciud_Nom, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <hr />
                        <div class="row">
                            <div class="col-sm-6">
                                <input type="submit" value="Crear" class="btn btn-default" />
                            </div>
                            <div class="col-md-6">
                                <a href="~/Ciudads/Index"><input type="button" class="btn btn-warning centrar-contenido" value="Volver" style="left: 20px" /></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>