@model PruebaItehl_DeyvidMartinez.Models.Curso
@Styles.Render("~/Content/Bootstrap.css")
@Styles.Render("~/Content/EstilosIndex.css")
@Styles.Render("~/Content/estilos.css")
@Styles.Render("~/Content/Site.css")
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <title>Crear Curso</title>
</head>
<body class="fondotabla">
    <div class="row" style="width:100%">
        <div class="col-sm-12">
            <div class="titulo-crear">
                <h1>Crear Curso</h1>
            </div>
            <hr />
            <div class="texto-contenido">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="container">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.Curs_Nom, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div>
                                @Html.EditorFor(model => model.Curs_Nom, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Curs_Nom, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.Curs_Desc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div>
                                @Html.EditorFor(model => model.Curs_Desc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Curs_Desc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.IdModalidad, "IdModalidad", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div>
                                @Html.DropDownList("IdModalidad", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdModalidad, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.Curs_Costo, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div>
                                @Html.EditorFor(model => model.Curs_Costo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Curs_Costo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.IdPais, "IdPais", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div>
                                @Html.DropDownList("IdPais", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdPais, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.IdCiudad, "IdCiudad", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div>
                                @Html.DropDownList("IdCiudad", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdCiudad, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            @Html.LabelFor(model => model.Curs_Direc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div>
                                @Html.EditorFor(model => model.Curs_Direc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Curs_Direc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <hr />
                    <div class="row">
                        <div class="col-sm-6">
                            <input type="submit" value="Crear" class="btn btn-default" />
                        </div>
                        <div class="col-md-6">
                            <a href="~/Cursos/Index"><input type="button" class="btn btn-warning centrar-contenido" value="Volver" style="left: 20px" /></a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</body>

